generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Book {
  id            String  @id @default(uuid())
  title         String
  author        String
  coverUrl      String?
  description   String?
  pageCount     Int?
  isbn          String?
  googleBooksId String? @unique

  bookClubBooks BookClubBook[]
  userBooks     UserBook[]
  suggestions   BookSuggestion[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BookClubBook {
  id         String    @id @default(uuid())
  bookClubId String
  bookId     String
  status     String // 'current', 'upcoming', 'completed'
  startDate  DateTime?
  endDate    DateTime?
  addedById  String // User who added the book

  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  readingProgress ReadingProgress[]
  reviews         BookClubBookReview[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([bookClubId, bookId])
  @@index([bookClubId])
  @@index([status])
}

model UserBook {
  id     String  @id @default(uuid())
  userId String
  bookId String
  status String // 'favorite', 'reading', 'want_to_read', 'completed'
  rating Int? // 1-5 stars
  review String?

  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, bookId])
  @@index([userId])
  @@index([status])
}

model ReadingProgress {
  id             String   @id @default(uuid())
  bookClubBookId String
  userId         String
  pagesRead      Int      @default(0)
  percentage     Int      @default(0) // Calculated field for progress bar
  lastReadDate   DateTime @default(now())
  notes          String?

  bookClubBook BookClubBook @relation(fields: [bookClubBookId], references: [id], onDelete: Cascade)

  updatedAt DateTime @updatedAt

  @@unique([bookClubBookId, userId])
  @@index([userId])
}

model BookClubBookReview {
  id             String  @id @default(uuid())
  bookClubBookId String
  userId         String
  rating         Int // 1-5 stars
  reviewText     String?

  bookClubBook BookClubBook @relation(fields: [bookClubBookId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([bookClubBookId, userId])
  @@index([bookClubBookId])
  @@index([userId])
}

model BookSuggestion {
  id            String   @id @default(uuid())
  bookClubId    String
  bookId        String
  suggestedById String
  reason        String?
  status        String   @default("pending") // pending, accepted, rejected
  upvotes       Int      @default(0)
  downvotes     Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  book  Book                 @relation(fields: [bookId], references: [id], onDelete: Cascade)
  votes BookSuggestionVote[]

  @@index([bookClubId])
  @@index([status])
}

model BookSuggestionVote {
  id           String   @id @default(uuid())
  suggestionId String
  userId       String
  voteType     String // upvote, downvote
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  suggestion BookSuggestion @relation(fields: [suggestionId], references: [id], onDelete: Cascade)

  @@unique([suggestionId, userId])
  @@index([suggestionId])
  @@index([userId])
}
