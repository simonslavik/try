generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// BookClub model - stores book clubs where users discuss books
model BookClub {
  id               String         @id @default(uuid())
  name             String         @default("Untitled Book Club")
  description      String? // Club description
  imageUrl         String? // Optional bookclub cover image
  category         String         @default("General") // Book club category for discovery filtering
  visibility       ClubVisibility @default(PUBLIC)
  requiresApproval Boolean        @default(false) // For PRIVATE clubs
  inviteCode       String?        @unique // Permanent invite code for INVITE_ONLY clubs
  creatorId        String // User ID from user-service (no FK due to separate DBs)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  lastActiveAt     DateTime       @default(now())

  // Relations
  rooms              Room[]
  events             BookClubEvent[]
  meetings           Meeting[]
  invites            BookClubInvite[]
  members            BookClubMember[]
  membershipRequests MembershipRequest[]

  @@index([creatorId])
  @@index([lastActiveAt])
  @@index([visibility])
  @@index([category])
  @@map("bookclubs")
}

enum ClubVisibility {
  PUBLIC // Anyone can see and join instantly
  PRIVATE // Anyone can see, join requires approval
  INVITE_ONLY // Only visible to members, join via invite
}

// BookClubMember model - stores membership with roles
model BookClubMember {
  id         String           @id @default(uuid())
  bookClubId String
  bookClub   BookClub         @relation(fields: [bookClubId], references: [id], onDelete: Cascade)
  userId     String // User ID from user-service
  role       BookClubRole     @default(MEMBER)
  status     MembershipStatus @default(ACTIVE)
  invitedBy  String? // User ID who invited them
  joinedAt   DateTime         @default(now())
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  @@unique([bookClubId, userId])
  @@index([bookClubId, status])
  @@index([userId])
  @@map("bookclub_members")
}

enum BookClubRole {
  OWNER // Created the club, full control
  ADMIN // Can manage members, approve requests, moderate
  MODERATOR // Can moderate content, manage books
  MEMBER // Regular member
}

enum MembershipStatus {
  ACTIVE // Active member
  BANNED // Banned from club
  LEFT // Left the club
}

// MembershipRequest model - stores join requests for PRIVATE clubs
model MembershipRequest {
  id         String        @id @default(uuid())
  bookClubId String
  bookClub   BookClub      @relation(fields: [bookClubId], references: [id], onDelete: Cascade)
  userId     String // User ID from user-service
  message    String? // Optional message from user
  status     RequestStatus @default(PENDING)
  reviewedBy String? // User ID who reviewed the request
  reviewedAt DateTime?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@unique([bookClubId, userId])
  @@index([bookClubId, status])
  @@index([userId])
  @@map("membership_requests")
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum RoomType {
  PUBLIC       // Anyone in the book club can see and join
  PRIVATE      // Only invited members can see and access
  ANNOUNCEMENT // Only moderators+ can send messages, everyone can read
}

// Room model - channels within a BookClub (like Discord channels)
model Room {
  id          String   @id @default(uuid())
  bookClubId  String
  bookClub    BookClub @relation(fields: [bookClubId], references: [id], onDelete: Cascade)
  name        String   @default("general")
  description String?
  type        RoomType @default(PUBLIC)
  isDefault   Boolean  @default(false)
  createdBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  messages  Message[]
  members   RoomMember[]
  roomReads RoomRead[]

  @@unique([bookClubId, name])
  @@index([bookClubId])
  @@map("rooms")
}

// RoomMember model - tracks members of private rooms
model RoomMember {
  id       String   @id @default(uuid())
  roomId   String
  room     Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  userId   String
  joinedAt DateTime @default(now())

  @@unique([roomId, userId])
  @@index([roomId])
  @@index([userId])
  @@map("room_members")
}

// RoomRead model - tracks when each user last read each room (for unread indicators)
model RoomRead {
  id         String   @id @default(uuid())
  roomId     String
  room       Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  userId     String
  lastReadAt DateTime @default(now())

  @@unique([roomId, userId])
  @@index([userId])
  @@map("room_reads")
}

// SectionRead model - tracks when each user last viewed each navigation section
model SectionRead {
  id           String   @id @default(uuid())
  userId       String
  clubId       String
  section      String   // 'suggestions' | 'books' | 'calendar' | 'meetings'
  lastViewedAt DateTime @default(now())

  @@unique([userId, clubId, section])
  @@index([userId, clubId])
  @@map("section_reads")
}

// SectionActivity model - tracks the latest activity per section per club
model SectionActivity {
  id             String   @id @default(uuid())
  clubId         String
  section        String   // 'suggestions' | 'books' | 'calendar' | 'meetings'
  lastActivityAt DateTime @default(now())
  lastActivityBy String   // userId who triggered the activity

  @@unique([clubId, section])
  @@index([clubId])
  @@map("section_activities")
}

// Message model - stores chat messages in rooms (like Discord messages)
model Message {
  id           String     @id @default(uuid())
  roomId       String
  room         Room       @relation(fields: [roomId], references: [id], onDelete: Cascade)
  userId       String // User ID from user-service
  username     String // Cached username for display
  profileImage String? // Cached profile image path for display
  content      String?
  isPinned     Boolean    @default(false)
  deletedAt    DateTime?
  deletedBy    String? // User ID who deleted the message
  editedAt     DateTime? // When the message was last edited
  replyToId    String? // ID of the message being replied to
  replyTo      Message?   @relation("MessageReplies", fields: [replyToId], references: [id], onDelete: SetNull)
  replies      Message[]  @relation("MessageReplies")
  createdAt    DateTime   @default(now())
  attachments  ChatFile[]
  reactions    Reaction[]

  @@index([roomId, createdAt])
  @@index([roomId, isPinned])
  @@index([userId])
  @@map("messages")
}

// Reaction model - emoji reactions on messages (like Slack/Discord)
model Reaction {
  id        String   @id @default(uuid())
  messageId String
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  userId    String // User ID from user-service
  emoji     String // Unicode emoji character: "üëç", "‚ù§Ô∏è", etc.
  createdAt DateTime @default(now())

  @@unique([messageId, userId, emoji]) // One reaction per emoji per user per message
  @@index([messageId])
  @@index([userId])
  @@map("reactions")
}

// ChatFile model - stores uploaded files/images in chat
model ChatFile {
  id           String   @id @default(uuid())
  filename     String // Stored filename on disk
  originalName String // Original filename from user
  mimetype     String
  size         Int
  url          String // Relative path to file
  uploadedBy   String // User ID from user-service
  messageId    String? // Optional: associated message
  message      Message? @relation(fields: [messageId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())

  @@index([messageId])
  @@index([uploadedBy])
  @@map("chat_files")
}

// BookClubEvent model - stores calendar events for book clubs
model BookClubEvent {
  id          String   @id @default(uuid())
  bookClubId  String
  bookClub    BookClub @relation(fields: [bookClubId], references: [id], onDelete: Cascade)
  title       String
  description String?
  eventDate   DateTime
  eventType   String   @default("meeting") // meeting, book_deadline, discussion, other
  createdBy   String // User ID from user-service
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([bookClubId, eventDate])
  @@index([createdBy])
  @@map("bookclub_events")
}

