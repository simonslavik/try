generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Room model - stores collaborative editing rooms
model Room {
  id           String   @id @default(uuid())
  name         String? // Optional room name
  creatorId    String // User ID from user-service (no FK due to separate DBs)
  code         String   @default("// Start coding together!\n\n") @db.Text
  language     String   @default("javascript") // Code language
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastActiveAt DateTime @default(now())

  // Relations
  snapshots Snapshot[]

  @@index([creatorId]) // Index for filtering rooms by creator
  @@index([lastActiveAt])
  @@map("rooms")
}

// Snapshot model - save code history every few minutes
model Snapshot {
  id        String   @id @default(uuid())
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  code      String   @db.Text
  createdBy String? // Username who triggered save
  createdAt DateTime @default(now())

  @@index([roomId, createdAt])
  @@map("snapshots")
}
