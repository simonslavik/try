# Environment Configuration for Collab-Editor Service

# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/collab_editor

# JWT Configuration (must match user-service)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# External Services
USER_SERVICE_URL=http://localhost:3001/api
BOOKS_SERVICE_URL=http://localhost:3002

# File Upload Configuration
# Storage provider: 'local' for development, 's3' for production
STORAGE_PROVIDER=local
MAX_FILE_SIZE_MB=10
MAX_IMAGE_SIZE_MB=5

# AWS S3 Configuration (only needed if STORAGE_PROVIDER=s3)
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.net

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
