{
  "name": "bookclub-service",
  "version": "1.0.0",
  "description": "Real-time book club discussion service",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "npx tsx watch src/index.ts",
    "dev:nodemon": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test DATABASE_URL='postgresql://test:test@localhost:5432/collab_test' jest --detectOpenHandles",
    "test:watch": "NODE_ENV=test DATABASE_URL='postgresql://test:test@localhost:5432/collab_test' jest --watch",
    "test:coverage": "NODE_ENV=test DATABASE_URL='postgresql://test:test@localhost:5432/collab_test' jest --coverage",
    "test:unit": "NODE_ENV=test DATABASE_URL='postgresql://test:test@localhost:5432/collab_test' jest tests/unit",
    "test:integration": "NODE_ENV=test DATABASE_URL='postgresql://test:test@localhost:5432/collab_test' jest tests/integration",
    "test:ci": "NODE_ENV=test DATABASE_URL='postgresql://test:test@localhost:5432/collab_test' jest --ci --coverage --maxWorkers=2"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/multer": "^2.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "prom-client": "^15.1.3",
    "uuid": "^11.0.3",
    "winston": "^3.19.0",
    "ws": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prisma": "^6.19.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
